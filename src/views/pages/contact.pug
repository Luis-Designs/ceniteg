extends ../layouts/default.pug

block consts
    - var title = "Contact"
    - var dir = ''


block content
    .container-fluid.hero-contact.py-5
        .row.d-flex.flex-column.flex-lg-row 
            .col-md-6.d-flex.justify-content-center
                h1 ¡Sucríbete!

            .col-md-6.d-flex.flex-column.form-contact.align-items-center.mt-2.mt-md-0
                form(action="#", method="post")
                    .col-12.inputgroup
                        input.form-control(type="text",name="name", placeholder="Ingrese su nombre")
                    .inputgroup
                        input.form-control(type="text",name="email", placeholder="Ingrese su correo")
                    .inputgroup
                        input.form-control(type="text",name="subject", placeholder="Asunto")
                    .inputgroup
                        textarea.form-control#message(name="message", placeholder="Ingrese su mensaje")
                    .inputgroup
                        button.btn.btn-primary.btn-lg(type="submit") Enviar mensaje
                    
                    


    
