extends ../layouts/default.pug

block consts
    - var title = "Services"
    - var dir = ''

append css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css')

append script
    script(src='https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js')
    

block content
    .container-fluid.hero.hero-services
        .row
            .col-lg-8.hero-services-text(data-aos="fade-right")
                h1.display-5.fw-bold.lh-1.mb-3 Asesoría y Soluciones Integrales en Minería y Medio Ambiente
                p.lead.fs-4 Nuestra empresa ofrece servicios de asesoría y soluciones integrales en el sector minero, ambiental y otros sectores productivos, para ayudar a nuestros clientes a cumplir con las normas ambientales y mejorar su eficiencia operativa.

    include ../../data/services
    include ../../mixins/modalService
    h2.container-fluid.d-flex.flex-wrap.justify-content-evenly.pt-5(data-aos="fade-up",   data-aos-duration="1500") NUESTROS SERVICIOS
    .container-fluid.d-flex.flex-wrap.justify-content-evenly.pt-5
        each service, key in services
            .card.col-md-6.col-lg-4.mb-5.bg-white(style='width: 22rem;',id=key, data-aos="flip-left")
                .card-img-top.card-img-service(style="background-image: url('"+ service.img + "')")
                    h2 #{service.name}
                .card-body
                    p.card-text #{service.description}
                .card-footer
                    a(href="services/"+key+".pug") Ver Más 

    h2.container-fluid.d-flex.flex-wrap.justify-content-evenly.pt-5(data-aos="fade-up",   data-aos-duration="1500") NUESTROS CLIENTES
    
    .container-fluid.d-flex.flex-wrap.justify-content-evenly.pb-5(data-aos="zoom-in")
        include ../../partials/sections/carouselClients
    
      
                    
     
        

