extends ../layouts/default.pug

block consts
    - var title = "Services"
    - var dir = ''

append css
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css')

append script
    script(src='https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js')
    

block content
    .video-services
        video(autoplay='' muted='' playsinline='' loop='', src='https://storage.googleapis.com/ceniteg-images/SERVICIOS.mp4')
        .container-fluid
            .col-12.slide-right
                h1 Asesoría y Soluciones Integrales en Minería y Medio Ambiente
                p Nuestra empresa ofrece servicios de asesoría y soluciones integrales en el sector minero, ambiental y otros sectores productivos, para ayudar a nuestros clientes a cumplir con las normas ambientales y mejorar su eficiencia operativa.

    include ../../data/services
    include ../../mixins/modalService
    h2.title-services.pt-5 NUESTROS SERVICIOS
    .container-fluid.d-flex.flex-wrap.justify-content-evenly.pt-5
        each service, key in services
            .card.col-md-6.col-lg-4.mb-5(style='width: 22rem;',id=key)
                .card-img-top.card-img-service(style="background-image: url('"+ service.img + "')")
                    h2 #{service.name}
                .card-body
                    p.card-text #{service.description}
                .card-footer
                    +modalService(service.name, service.topics.items, key)
                    a(href="services/"+key+".pug") Ver Más 

