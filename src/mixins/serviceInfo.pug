include ../data/services
include modalService

mixin serviceInfo(service)
    - var serviceDetails = services[service]

    .container-fluid.d-flex.justify-content-center.align-items-center.text-white.hero.hero-info-service(style="background-image: url('" + serviceDetails.img + "')")
        .col-12.slide-right
            h1 #{serviceDetails.name}
            p #{serviceDetails.description}

    .container-fluid.service-info.py-5
        h2 Subservicios
        .subservice.mt-4
            .subservice-content
                img(src=serviceDetails.topics.img, alt="subservice-img")
                div
                    each item, key in serviceDetails.topics.items
                        p <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm-1.999 14.413-3.713-3.705L7.7 11.292l2.299 2.295 5.294-5.294 1.414 1.414-6.706 6.706z"></path></svg>#{item}